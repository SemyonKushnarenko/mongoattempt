<h2>Add new course</h2>
<form action="/add" method="POST">
    <div class="container">
        <div class="input-field">
            <input id="title" name="title" type="text" class="validate" required>
            <label for="title">Title</label>
            <span class="helper-text" data-error="Input title, please"></span>
        </div>
        <div class="input-field">
            <input id="img_url" name="img" type="text" class="validate" required>
            <label for="img_url">Image URL</label>
            <span class="helper-text" data-error="Input the URL address of image"></span>
        </div>
        <div class="input-field">
            <input id="price" name="price" min="0" type="text" class="validate" required>
            <label for="price">Price</label>
            <span class="helper-text" data-error="Input price of this course"></span>
        </div>
        <button class="btn btn-secondary" type="submit">Add</button>
    </div>
</form>