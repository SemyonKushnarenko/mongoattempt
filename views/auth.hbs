<h2>Auth</h2>
<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s3"><a href="#signup">Sign up</a></li>
            <li class="tab col s3"><a class="active" href="#signin">Sign in</a></li>
        </ul>
    </div>
    <div id="signup" class="col s12">
        <form action="/auth/signup" method="post">
            <div class="input-field">
                <input id="name" name="name" type="text" class="validate" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="Input your name"></span>
            </div>
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Input your email" ></span>
            </div>
            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Input a password"></span>
            </div>
            <div class="input-field">
                <input id="repeat" name="repeat" type="password" class="validate" required>
                <label for="repeat">Repeat your password</label>
                <span class="helper-text" data-error="Repeat your password"></span>
            </div>
            <button class="btn blue" type="submit">Sign up</button>
        </form>
    </div>
    <div id="signin" class="col s12">
        <form action="/auth/signin" method="post">
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Input your email" ></span>
            </div>
            <div class="input-field">
                <input id="password" name="password" type="password" class="validate" required>
                <label for="password">Password</label>
                <span class="helper-text" data-error="Input a password"></span>
            </div>
            <button class="btn green" type="submit">Sign in</button>
        </form>
    </div>
</div>