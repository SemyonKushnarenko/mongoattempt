<h2>Edit course "{{course.title}}"</h2>

<div class="container">
    <form action="/courses/edit" method="POST" class="edit-form">
            <div class="input-field">
                <input id="title" name="title" type="text" class="validate" value="{{course.title}}" required>
                <label for="title">Title</label>
                <span class="helper-text" data-error="Input title, please"></span>
            </div>
            <div class="input-field">
                <input id="img_url" name="img" type="text" class="validate" value="{{course.img}}" required>
                <label for="img_url">Image URL</label>
                <span class="helper-text" data-error="Input the URL address of image"></span>
            </div>
            <div class="input-field">
                <input id="price" name="price" min="0" type="text" class="validate" value="{{course.price}}" required>
                <label for="price">Price</label>
                <span class="helper-text" data-error="Input price of this course"></span>
            </div>
            <input type="hidden" name="id" value="{{course.id}}">
            <button class="btn btn-secondary" type="submit">Save</button>
    </form>
    <form action="/courses/remove" method="post">
                <input type="hidden" name="id" value={{course.id}}>
                <button class="btn red" type="submit">Delete course</button>
    </form>
</div>